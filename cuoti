#include<iostream>
#include<cmath>
using namespace std;
int deep(int,int);

int main()
{
    int n;
    cin>>n;
    while(n--)
    {
        int i,j;
        int mi1=1,mi2=1;
        int x=1; int y=1;
        int cha;
        cin>>i>>j;
        for(x=1;x<=i;mi1++)
        {
            x*=2;
        }
        mi1=mi1-1;
        for(y=1;y<=j;mi2++)
        {
            y*=2;
        }
        mi2=mi2-1;
        if(mi1==mi2) cout<<deep(i,j)<<endl;
        else
       {
            if(mi1>mi2)
            {
                cha=mi1-mi2;
                while(cha--)
                i/=2;
            }
            if(mi1<mi2)
            {
                cha=mi2-mi1;
                while(cha--)
                j/=2;
            }
            cout<<deep(i,j)+cha<<endl;
        }
    }
}

int deep(int a,int b)
{
    if(a==b) return 0;
    else return deep(a/2,b/2)+2;
}
